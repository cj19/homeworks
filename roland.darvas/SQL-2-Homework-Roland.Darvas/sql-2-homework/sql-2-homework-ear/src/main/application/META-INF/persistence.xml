<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="AmusementParkPU" transaction-type="JTA">
        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        <jta-data-source>java:jboss/datasources/vidampark</jta-data-source>
        <class>com.company.rolanddarvas.entity.Address</class>
        <class>com.company.rolanddarvas.entity.AmusementPark</class>
        <class>com.company.rolanddarvas.entity.GuestBook</class>
        <class>com.company.rolanddarvas.entity.Machine</class>
        <class>com.company.rolanddarvas.entity.Visitor</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
    </persistence-unit>
</persistence>

